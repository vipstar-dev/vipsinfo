{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "newLine": "lf",
    "noEmit": false,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/bluebird",
      "@types/node",
      "@types/liftoff",
      "@types/lru-cache",
      "@types/socket.io",
      "@types/uuid",
      "@types/validator"
    ],
    "typeRoots": [
      "types"
    ],
    "rootDirs": [
      "node",
      "lib",
      "p2p",
      "rpc"
    ],
    "outDir": "dist",
    /* Advanced Options */
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules"
  ]
}
